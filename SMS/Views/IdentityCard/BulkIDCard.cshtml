
@{
    ViewBag.Title = "BulkIDCard";
}

<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">
            Print Bulk Student Identity Card
            <a data-toggle="modal" href="#myModal" class="btn btn-primary btn-sm" style="float: right;">Read Me</a>
        </h3>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">  Usefull Info</h4>
                    </div>
                    <div class="modal-body">
                        You can Print ID Card of whole class.
                        Enter session -------> Enter class --------> Select section -------->  Print ID Card
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div>


            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible" role="alert" style="margin-bottom:0;">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    Oh snap! @TempData["Error"].
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible" role="alert" style="margin-bottom:0;">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    Success! @TempData["Success"].
                </div>
            }
            @if (TempData["Info"] != null)
            {
                <div class="alert alert-info alert-dismissible" role="alert" style="margin-bottom:0;">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    Info! @TempData["Info"].
                </div>
            }
        </div>
        <div id="main-wrapper">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-white">
                        <div class="panel-body">
                            <div id="rootwizard">
                                <div class="row m-b-lg">
                                    <div class="col-md-6">
                                        <form action="~/IdentityCard/BulkCard" method="post">
                                            <div class="row">
                                                <div class="form-group col-md-4">
                                                    <label for="ageRangeField">Session</label>
                                                    @Html.DropDownList("sesId", (SelectList)ViewData["Session"], "Select Session", new { @Name = "sesId", required = "required", @class = "form-control" })
                                                </div>
                                                <div class="form-group col-md-4">
                                                    <label for="ageRangeField">Class</label>
                                                    @Html.DropDownList("classId", (SelectList)ViewData["Class"], "Select Class", new { @Name = "classId", required = "required", @class = "form-control" })
                                                </div>
                                                <div class="form-group col-md-4">
                                                    <label for="ageRangeField">Section</label>
                                                    @Html.DropDownList("secId", (SelectList)ViewData["Section"], "Select Section", new { @Name = "secId", required = "required", @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group col-md-12">
                                                    <input class="btn btn-primary" type="submit"  value="Print ID Card">
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- Row -->
        </div><!-- Main Wrapper -->
    </div>

</div>

