@model SMS.Models.StudentFee
@{
    ViewBag.Title = "UpdateReceivedFee";
}
<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">Update Student Received Fee</h3>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Oh snap! @TempData["Error"].
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Success! @TempData["SuccessMessage"].
            </div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Info! @TempData["Info"].
            </div>
        }
    </div>
    <div id="main-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-white">
                    <div class="panel-body">
                        <div id="rootwizard">
                            <div class="row m-b-lg">
                                <div class="col-md-9">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.feeId)
                                        <div class="row">
                                            <div class="form-group col-md-4">
                                                <label> Roll Number:</label>&nbsp;&nbsp;
                                                @Html.DisplayFor(model => model.std.stdRollNo)
                                            </div>
                                            <div class="form-group col-md-5">
                                                <label>Student Name:</label>&nbsp;&nbsp;
                                                @Html.DisplayFor(model => model.std.pr.perName)
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-3">
                                                <label for="exampleInputName2">Session</label>
                                                @Html.DropDownList("sesId", (SelectList)ViewData["Session"], "Select Session", new { @disabled = "disabled", @class = "form-control", required = "required" })
                                            </div>
                                            <div class="form-group col-md-3">
                                                <label for="exampleInputName2">Class</label>
                                                @Html.DropDownList("classId", (SelectList)ViewData["Class"], "Select Class", new { @disabled = "disabled", @class = "form-control", required = "required" })
                                            </div>
                                            <div class="form-group col-md-3">
                                                <label for="exampleInputName2">Section</label>
                                                @Html.DropDownList("secId", (SelectList)ViewData["Section"], "Select Section", new { @disabled = "disabled", @class = "form-control", required = "required", @id = "secId" })
                                            </div>
                                        </div>


                                        <div class="row">
                                            <div class="form-group col-md-3">
                                                <label>Fee Names</label>
                                                @Html.DropDownList("feeTypeId", (SelectList)ViewData["FeeType"], "--Select Fee Type--", new { @class = "form-control", required = "required" })
                                            </div>
                                            <div class="form-group col-md-3">
                                                <label>Enter Updated Fee</label>
                                                @Html.EditorFor(model => model.feeAmount, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-12">
                                                <input type="submit" value="Update Fee" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    }
                                   
                                </div>
                                
                            </div>

                        </div>
                    </div>
                </div>
            </div>



        </div><!-- Row -->
    </div><!-- Main Wrapper -->

</div>

