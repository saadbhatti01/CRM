@model SMS.Models.StdFeePkg
@{
    ViewBag.Title = "EditStdFeePkg";
}

<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">Update Student Fee Package</h3>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Oh snap! @TempData["Error"].
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Success! @TempData["SuccessMessage"].
            </div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Info! @TempData["Info"].
            </div>
        }
    </div>
    <div id="main-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-white">
                    <div class="panel-body">
                        <div id="rootwizard">
                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.sfpId)
                                <div class="row m-b-lg">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="form-group col-md-6">
                                                <label for="exampleInputName">Fee Discount</label>
                                                @Html.EditorFor(model => model.sfpDis, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label>Max Discount(Rs.)</label>

                                                <input type="text" name="Dis" value="@TempData["Disc"]" class="form-control" readonly />

                                            </div>

                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">

                                                <input class="btn btn-primary" type="submit" value="Update Discount">
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- Row -->
    </div><!-- Main Wrapper -->

</div>
