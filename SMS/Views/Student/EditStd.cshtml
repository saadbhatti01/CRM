@model SMS.Models.RegViewModel
@{
    ViewBag.Title = "EditStd";
}

<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">Update Student Record</h3>
    </div>
    <div id="main-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-white">
                    <div class="panel-body">
                        <div id="rootwizard">
                            @using (Html.BeginForm("EditStd", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                             <div class="row m-b-lg">
                                 <div class="col-md-12">

                                     <div class="row">
                                         @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                         @Html.HiddenFor(model => model.perId)
                                         <div class="form-group col-md-3">
                                             <label for="exampleInputName">Name</label>
                                             @Html.EditorFor(model => model.perName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                         </div>
                                         <div class="form-group  col-md-3">
                                             <label for="exampleInputName2">Father Name</label>
                                             @Html.EditorFor(model => model.perGarName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                         </div>
                                         <div class="form-group col-md-3">
                                             <label for="exampleInputEmail">CNIC</label>
                                             @Html.EditorFor(model => model.perCNIC, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                         </div>
                                         <div class="form-group col-md-3">
                                             <label for="exampleInputPassword1">Email</label>
                                             @Html.EditorFor(model => model.perEmail, new { htmlAttributes = new { @class = "form-control", required = "required", @type = "email" } })
                                         </div>
                                     </div>
                                     <div class="row">
                                         <div class="form-group col-md-3">
                                             <label for="exampleInputName">DOB</label>
                                             @Html.EditorFor(model => model.perDOB, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                         </div>
                                         <div class="form-group  col-md-3">
                                             <label for="exampleInputName2">Blood Group</label>
                                             @Html.EditorFor(model => model.perBloodGrp, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                         </div>
                                         <div class="form-group col-md-3">
                                             <label for="exampleInputEmail">Conatct One</label>
                                             @Html.EditorFor(model => model.perContactOne, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                         </div>
                                         <div class="form-group col-md-3">
                                             <label for="exampleInputPassword1">Contact Two</label>
                                             @Html.EditorFor(model => model.perContactTwo, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                         </div>
                                     </div>

                                     <div class="row">
                                         <div class="form-group col-md-6">
                                             <label for="exampleInputName">Current Address</label>
                                             @Html.EditorFor(model => model.perCurrentAdrs, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                         </div>
                                         <div class="form-group  col-md-6">
                                             <label for="exampleInputName2">Permanent Address</label>
                                             @Html.EditorFor(model => model.perPermanantAdrs, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                         </div>

                                     </div>
                                     <div class="row">
                                         <div class="form-group col-md-3">
                                             <label for="exampleInputName">Roll Number</label>
                                             @Html.EditorFor(model => model.stdRollNo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                         </div>
                                         <div class="form-group  col-md-3">
                                             <label for="exampleInputName2">Student Status</label>
                                             <select id="ageRangeField" name="stdStatus" class="form-control">
                                                 <option value="Active">Active</option>
                                                 <option value="Freeze">Freeze</option>
                                                 <option value="Deactive">Deactive</option>
                                                 <option value="Left">Left</option>
                                                 <option value="Suspeded">Suspended</option>
                                             </select>
                                         </div>
                                         <div class="form-group col-md-3">
                                             <label for="exampleInputName">City</label>
                                             @Html.DropDownList("CityId", (SelectList)ViewData["City"], "--Select City--", new { required = "required", @class = "form-control" })
                                         </div>
                                         <div class="form-group col-md-3">
                                             <label for="exampleInputName">Area</label>
                                             @Html.DropDownList("AreaId", (SelectList)ViewData["Area"], "--Select Area--", new { required = "required", @class = "form-control" })
                                         </div>
                                     </div>

                                     <div class="row">

                                         <div class="form-group  col-md-3">
                                             <label for="exampleInputName">Campus</label>
                                             @Html.DropDownList("camId", (SelectList)ViewData["Campus"], "--Select Campus--", new { required = "required", @class = "form-control" })
                                         </div>
                                         <div class="form-group col-md-3">
                                             <label for="exampleInputName">Session</label>
                                             @Html.DropDownList("sesId", (SelectList)ViewData["Session"], "--Select Session--", new { required = "required", @class = "form-control" })
                                         </div>
                                         <div class="form-group col-md-3">
                                             <label for="exampleInputName">Class</label>
                                             @Html.DropDownList("classId", (SelectList)ViewData["Class"], "--Select Class--", new { required = "required", @class = "form-control" })
                                         </div>
                                         <div class="form-group col-md-3">
                                             <label for="exampleInputName">Section</label>
                                             @Html.DropDownList("secId", (SelectList)ViewData["Section"], "--Select Section--", new { required = "required", @class = "form-control" })

                                         </div>
                                     </div>
                                     <div class="row">
                                         <div class="form-group col-md-3">
                                             <label for="exampleInputName">Cast</label>
                                             @Html.EditorFor(model => model.perCast, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                         </div>
                                         <div class="form-group  col-md-3">
                                             <label for="exampleInputName2">Religion</label>
                                             <select name="perReligion" class="form-control">
                                                 <option value="Islam">Islam</option>
                                                 <option value="Sikhism">Sikhism</option>
                                                 <option value="Hinduism">Hinduism</option>
                                                 <option value="Atheist">Atheist</option>
                                                 <option value="Buddhism">Buddhism</option>
                                                 <option value="Chinese traditional religion">Chinese traditional religion</option>
                                                 <option value="Christianity">Christianity</option>
                                                 <option value="Secular">Secular</option>
                                                 <option value="Other">Other</option>
                                             </select>
                                         </div>
                                         <div class="col-md-3">
                                             <label for="ageRangeField">Image</label>
                                             <img src="~/Images/@Model.perImage" alt="Image" height="40" width="40" />
                                             <input type="file" name="perImage" id="perImage" class="form-control">
                                         </div>

                                     </div>
                                     <div class="row col-md-12 form-group" >
                                         <input class="btn btn-primary" type="submit" value="Update">
                                     </div>
                                 </div>
                                    
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- Row -->
    </div><!-- Main Wrapper -->

</div>

