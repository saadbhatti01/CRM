@model IEnumerable<SMS.Models.ExtraFeeType>

@{
    ViewBag.Title = "ExtraFeeType";
}
<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">
            Extra Fee Type
            <a data-toggle="modal" href="#myModal" class="btn btn-primary btn-sm" style="float: right;">Read Me</a>
        </h3>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">  Usefull Info</h4>
                    </div>
                    <div class="modal-body">
                        You can add any kind of extra activites here.(like: Trips, functions, ID Card, Books etc).
                        Enter Name ------>  Select Open -------> Click "SAVE", by clicking you will see the details of extras added. <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div>
        </div>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Oh snap! @TempData["Error"].
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Success! @TempData["SuccessMessage"].
            </div>

        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Info! @TempData["Info"].
            </div>
        }
    </div>
    <div id="main-wrapper">

        <div class="row">
          
            <div class="col-md-12">
                <div class="panel panel-white">


                    <div class="panel-body">
                        <form action="~/Extras/ExtraFeeType" method="post">
                            <div class="col-md-3 form-group">
                                <label for="ageRangeField">Fee Name</label>
                                <input type="text" name="eftName" placeholder="" id="nameField" class="form-control">
                            </div>
                            <div class="col-md-3 form-group">
                                       <label for="ageRangeField">Fee Status</label>
                                       <select id="ageRangeField" name="eftStatus" class="form-control">
                                           <option value="True">Open</option>
                                           <option value="False">Closed</option>
                                       </select>
                                   </div>
                                       <div class="col-md-12 form-group">
                                           <input class="btn btn-primary" type="submit" value="save">
                                       </div>
                        </form>

                    </div>

                </div>
            </div>

            <div class="col-md-6">
                <div class="panel panel-white">

                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>

                                        <th>Fee Name</th>
                                        <th>Fee Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                @if (TempData["EFeeType"] != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tbody>
                                            <tr>
                                                <td>@item.eftName</td>
                                                <td>@item.eftStatus</td>
                                                <td>
                                                    <a title="Update Section" class="counter" href="@Url.Action("UpdateExtraFeeType", "Extras", new { id = item.eftId })">
                                                        <i class="fa fa-edit" style="font-size:20px"></i>
                                                    </a>
                                                    <a title="Delete Section" class="counter" href="@Url.Action("DelExtraFeeType", "Extras", new { id = item.eftId })">
                                                        <i class="fa fa-trash" style="font-size:20px;color:red"></i>
                                                    </a>
                                                </td>
                                                


                                            </tr>
                                        </tbody>
                                    }
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

