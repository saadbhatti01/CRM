@model SMS.Models.ExtraFeeType

@{
    ViewBag.Title = "UpdateExtraFeeType";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="page-inner">
        <div class="panel-title">
            <h3 class="breadcrumb-header">Update Extra Fee Type</h3>
        </div>
        <div id="main-wrapper">
            <div class="row">

                <div class="col-md-12">


                    <div class="panel panel-white">
                        <div class="panel-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.eftId)
                            <div class="col-md-3">
                                <div class="form-group">

                                    <label>Extra Fee Type Name</label>
                                    @Html.EditorFor(model => model.eftName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.eftName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Extra Fee Type Status</label>
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.eftStatus, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.eftStatus, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">

                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>

                        </div>
                        <hr />
                        @Html.ActionLink("Back to List", "ExtraFeeType")
                    </div>
                </div>




            </div>
        </div>
    </div>

}
