@model SMS.Models.StudentExtraFee

@{
    ViewBag.Title = "ExtraFeeReport";
}

<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">Student Extra Fee Report</h3>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Oh snap! @TempData["Error"].
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Success! @TempData["SuccessMessage"].
            </div>

        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Info! @TempData["Info"].
            </div>
        }
    </div>
    <div id="main-wrapper">

        <div class="row">
        
            <div class="col-md-12">
                <div class="panel panel-white">


                    <div class="panel-body">
                        <form action="~/Student/ClassFeePkg" method="post" name="ClassForm" onsubmit="return validateForm()">
                            
                                <div class="row">
                                    <div class="col-lg-3 form-group">
                                        <label for="ageRangeField">Session</label>
                                        @Html.DropDownList("sesId", (SelectList)ViewData["Session"], "--Select Session--", new { required = "required", @class = "form-control" })
                                    </div>
                                    <div class="col-lg-3 form-group" >
                                        <label for="ageRangeField">Class</label>
                                        @Html.DropDownList("classId", (SelectList)ViewData["Class"], "--Select Class--", new { required = "required", @class = "form-control" })
                                    </div>
                                    <div class="col-lg-3 form-group">
                                        <label for="ageRangeField">Section</label>
                                        @Html.DropDownList("secId", (SelectList)ViewData["Section"], "--Select Section--", new { required = "required", @id = "secId", @class = "form-control" })
                                    </div>
                                    <div class="col-lg-3 form-group">
                                        <label for="ageRangeField">Fee Type</label>
                                        @Html.DropDownList("eftId", (SelectList)ViewData["EFeeType"], "--Select Fee Type--", new { required = "required", @class="form-control" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-3 form-group">
                                        <label for="ageRangeField">Fee Type</label>
                                        <select id="Status" class="form-control">
                                            <option value="Paid">Paid</option>
                                            <option value="UnPaid">UnPaid</option>
                                        </select>
                                    </div>
                                </div>
                            
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>