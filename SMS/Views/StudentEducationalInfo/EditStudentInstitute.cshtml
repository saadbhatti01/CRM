@model SMS.Models.StudentInsInfo
@{
    ViewBag.Title = "EditStudentInstitute";
}

@using (Html.BeginForm())
{
    <div class="page-inner">
        <div class="panel-title">
            <h3 class="breadcrumb-header"> Update Institute Name</h3>
        </div>
        <div id="main-wrapper">
            <div class="row">

                <div class="col-md-12">
                    <div class="panel panel-white">
                        <div class="panel-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.StdInsId)

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Bank Name</label>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Is Visible</label>
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.IsVisible)
                                        @Html.ValidationMessageFor(model => model.IsVisible, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>


                        </div>
                        <div>
                            @Html.ActionLink("Back to List", "StudentInstitute")
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}


