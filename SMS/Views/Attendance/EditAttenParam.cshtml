@model SMS.Models.AttenParameter
@{
    ViewBag.Title = "EditAttenParam";
}

<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">Update Attendance Parameter</h3>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Oh snap! @TempData["Error"].
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Success! @TempData["Success"].
            </div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Info! @TempData["Info"].
            </div>
        }
    </div>
    <div id="main-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-white">
                    <div class="panel-body">
                        <div id="rootwizard">
                            <div class="row m-b-lg">
                                <div class="col-md-6">

                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.apId)

                                        <div class="row">
                                            <div class="form-group col-md-4">
                                                <label for="ageRangeField"> Role<span style="color:red">*</span></label>
                                                @Html.DropDownList("roleId", (SelectList)ViewData["Role"], "--Select Role--", new { required = "required", style = "width: 190px;" })
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-4">
                                                <label for="ageRangeField">In Minimimum Time</label>
                                                @Html.EditorFor(model => model.InMinTime, new { htmlAttributes = new { @class = "form-control" } })

                                            </div>
                                            <div class="form-group col-md-4">
                                                <label for="ageRangeField">In Maximum Time</label>
                                                @Html.EditorFor(model => model.InMaxTime, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-4">
                                                <label for="ageRangeField">Out Minimimum Time</label>
                                                @Html.EditorFor(model => model.OutMinTime, new { htmlAttributes = new { @class = "form-control" } })

                                            </div>
                                            <div class="form-group col-md-4">
                                                <label for="ageRangeField">Out Maximum Time</label>
                                                @Html.EditorFor(model => model.OutMaxTime, new { htmlAttributes = new { @class = "form-control" } })

                                            </div>
                                            <div class="form-group col-md-12">
                                                <input class="btn btn-primary" name="submitButton" type="submit" value="Update">
                                            </div>
                                        </div>
                                    }

                                    <hr />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- Row -->
    </div><!-- Main Wrapper -->
</div>

