
@model IEnumerable<SMS.Models.ExamType>
@{
    ViewBag.Title = "ExamType";
}
<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">Exam Type</h3>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Oh snap! @TempData["Error"].
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Success! @TempData["SuccessMessage"].
            </div>

        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Info! @TempData["Info"].
            </div>
        }
    </div>
    <div id="main-wrapper">

        <div class="row">




            <div class="col-md-12">
                <div class="panel panel-white">


                    <div class="panel-body">
                        <form action="~/Examination/ExamType" method="post">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="ageRangeField"> ExamType Name</label>
                                    <input type="text" name="etname" placeholder="" id="nameField" class="form-control">
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="ageRangeField">Is Visible</label>
                                    <select id="ageRangeField" name="etStatus" class="form-control">
                                        <option value="true">Yes</option>
                                        <option value="false">No</option>
                                    </select>
                                </div>
                            </div>


                            <div class="col-md-8">
                                <div class="form-group">
                                    <input class="btn btn-primary" type="submit" value="save">
                                </div>
                            </div>

                        </form>
                    </div>

                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-white">

                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Exam Type Name</th>
                                        <th>Visible</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                @if (TempData["ExamType"] != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tbody>
                                            <tr>

                                                <td>@item.etname</td>
                                                <td>@item.etStatus</td>
                                                <td>
                                                    <a title="Update Type" class="counter" href="@Url.Action("UpdateExamType", new { id = item.etId })">
                                                        <i class="fa fa-edit" style="font-size:20px"></i>
                                                    </a>
                                                    <a title="Delete Type" class="counter" href="@Url.Action("DelExamType", new { id = item.etId })">
                                                        <i class="fa fa-trash" style="font-size:20px;color:red"></i>
                                                    </a>
                                                </td>


                                            </tr>
                                        </tbody>
                                    }
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

