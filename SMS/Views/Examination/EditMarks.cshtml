@model SMS.Models.StdObtainMarks
@{
    ViewBag.Title = "EditMarks";
}
<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">Update Student Marks</h3>
    </div>
    <div id="main-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-white">
                    <div class="panel-body">
                        <div id="rootwizard">

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="row m-b-lg">
                                    <div class="col-md-12">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.somID)

                                        <div class="row">


                                            <div class="form-group col-md-3">
                                                <label for="exampleInputName">Session</label>
                                                @Html.DropDownList("sesId", (SelectList)ViewData["Session"], "--Select Session--", new { @class = "form-control", required = "required" })
                                            </div>
                                            <div class="form-group  col-md-3">
                                                <label for="exampleInputName2">Class</label>
                                                @Html.DropDownList("classId", (SelectList)ViewData["Class"], "--Select Class--", new { @class = "form-control", required = "required" })
                                            </div>
                                            <div class="form-group col-md-3">
                                                <label for="exampleInputEmail">Section</label>
                                                @Html.DropDownList("secId", (SelectList)ViewData["Section"], "--Select Section--", new { @class = "form-control", required = "required", @id = "secId" })
                                            </div>
                                            <div class="col-md-3">
                                                <label for="ageRangeField">Exam Type</label>
                                                @Html.DropDownList("etId", (SelectList)ViewData["ExamType"], "--Select Exam Type--", new { required = "required", @readonly = "readonly", @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-3">
                                                <label for="ageRangeField">Subject</label>
                                                @Html.DropDownList("subId", (SelectList)ViewData["SubJect"], "--Select Subject--", new { required = "required", @readonly = "readonly", @class = "form-control" })
                                            </div>

                                            <div class="form-group col-md-3">
                                                <label for="ageRangeField">Oral </label>
                                                @Html.EditorFor(model => model.smt1, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.smt1, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group col-md-3">
                                                <label for="ageRangeField">Objective</label>
                                                @Html.EditorFor(model => model.smt2, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.smt2, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group col-md-3">
                                                <label for="ageRangeField">Subjective</label>
                                                @Html.EditorFor(model => model.smt3, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.smt3, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-12">
                                               
                                                <input class="btn btn-primary" type="submit" value="Update">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>



        </div><!-- Row -->
    </div>

</div>


