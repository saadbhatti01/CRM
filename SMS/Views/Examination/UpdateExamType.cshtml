@model SMS.Models.ExamType
@{
    ViewBag.Title = "UpdateExamType";
}

@using (Html.BeginForm("UpdateExamType", "Examination", FormMethod.Post))
{
    @Html.AntiForgeryToken()
  
    <div class="page-inner">
        <div class="panel-title">
            <h3 class="breadcrumb-header"> Update Exam Type</h3>
        </div>
        <div id="main-wrapper">
            <div class="row">

                <div class="col-md-12">
                    
                    <div class="panel panel-white">
                        <div class="panel-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.etId)

                            <div class="col-md-3">

                                <div class="form-group">
                                    <label>Fee Name</label>
                                    @Html.EditorFor(model => model.etname, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.etname, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-3 form-group">
                                <label for="ageRangeField">Is Visisble</label>
                                <select id="ageRangeField" name="etStatus" class="form-control">
                                    <option value="true">Yes</option>
                                    <option value="false">No</option>
                                </select>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group">

                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}


