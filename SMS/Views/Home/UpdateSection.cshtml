@model SMS.Models.InstSection

@{
    ViewBag.Title = "UpdateSection";
}


@using (Html.BeginForm("UpdateSection", "Home"))
{
    <div class="page-inner">
        <div class="panel-title">
            <h3 class="breadcrumb-header"> Update Section</h3>
        </div>
        <div id="main-wrapper">
            <div class="row">

                <div class="col-md-12">


                    <div class="panel panel-white">
                        <div class="panel-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.secId)
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Section Name</label>

                                    @Html.EditorFor(model => model.secName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.secName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Section Code</label>

                                    @Html.EditorFor(model => model.secCode, new { htmlAttributes = new { @class = "form-control", Maxlength = "2" } })
                                    @Html.ValidationMessageFor(model => model.secCode, "", new { @class = "text-danger" })
                                </div>
                            </div>



                            <br>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
