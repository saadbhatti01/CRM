@model IEnumerable<SMS.Models.InstSession>

@{
    ViewBag.Title = "Sessions";
}

<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">Sessions</h3>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Oh snap! @TempData["Error"].
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Success! @TempData["SuccessMessage"].
            </div>

        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Info! @TempData["Info"].
            </div>
        }
    </div>
    <div id="main-wrapper">

        <div class="row">

            <div class="col-md-12">
                <div class="panel panel-white">


                    <div class="panel-body">
                        <form action="~/Home/Sessions" method="post">

                            <div class="row">
                                <div class="col-sm-3 form-group">
                                    <label for="dateField">Session Name</label><br>
                                    <input type="text" placeholder="" name="sesName" id="nameField" class="form-control" required>
                                </div>
                                <div class="col-sm-3 form-group">
                                    <label for="dateField">Session Code</label><br>
                                    <input type="text" placeholder="" maxlength="2" name="sesCode" id="nameField" class="form-control" required>
                                </div>
                                <div class="col-sm-3 form-group">
                                    <label for="dateField">Start Date</label><br>
                                    <input type="text" name="sesStartDate" placeholder="" id="nameField" class="form-control date-picker" required>
                                </div>
                                <div class="col-sm-3 form-group">
                                    <label for="dateField">End Date</label><br>
                                    <input type="text" name="sesEndDate" placeholder="" id="nameField" class="form-control date-picker" required>
                                </div>
                                <div class="col-sm-3 form-group">
                                    <label for="ageRangeField">Session Status</label><br>
                                    <select id="ageRangeField" name="sesStatus" class="form-control">
                                        <option value="Open">Open</option>
                                        <option value="Closed">Closed</option>
                                    </select>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary">Save</button>


                        </form>
                    </div>

                </div>
            </div>

            <div class="col-md-12"s>
                <div class="panel panel-white">

                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Session Name</th>
                                        <th>Session Code</th>
                                        <th>Session Status</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                @if (TempData["Session"] != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tbody>
                                            <tr>
                                                <td>@item.sesName</td>
                                                <td>@item.sesCode</td>
                                                <td>@item.sesStatus</td>
                                                <td>@item.sesStartDate.ToString("dd-MMM-yy")</td>
                                                <td>@item.sesEndDate.ToString("dd-MMM-yy")</td>
                                                <td>
                                                    <a title="Update Session" class="counter" href="@Url.Action("UpdateSession", new { id = item.sesId })">
                                                        <i class="fa fa-edit" style="font-size:20px"></i>
                                                    </a>
                                                    <a title="Delete Session" class="counter" href="@Url.Action("DelSession", new { id = item.sesId })">
                                                        <i class="fa fa-trash" style="font-size:20px;color:red"></i>
                                                    </a>
                                                </td>
                                                
                                            </tr>
                                        </tbody>
                                    }
                                }
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
