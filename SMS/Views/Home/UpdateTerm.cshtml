@model SMS.Models.Term

@{
    ViewBag.Title = "UpdateTerm";
}

@using (Html.BeginForm("UpdateTerm", "Home"))
{
    <div class="page-inner">
        <div class="panel-title">
            <h3 class="breadcrumb-header"> Update Term</h3>
        </div>
        <div id="main-wrapper">
            <div class="row">

                <div class="col-md-12">


                    <div class="panel panel-white">
                        <div class="panel-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.termId)

                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Term Name</label>
                                    @Html.EditorFor(model => model.termName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.termName, "", new { @class = "text-danger" })
                                    <br><input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>

                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}


