@model IEnumerable<SMS.Models.City>

@{
    ViewBag.Title = "City";
}
<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">Add City</h3>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Oh snap! @TempData["Error"].
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Success! @TempData["SuccessMessage"].
            </div>

        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Info! @TempData["Info"].
            </div>
        }
    </div>
    <div id="main-wrapper">

        <div class="row">

            <div class="col-md-12">
                <div class="panel panel-white">


                    <div class="panel-body">
                        <div class="col-md-6">
                            <form action="~/Home/City" method="post">
                                <div class="form-group col-md-6">
                                    <label for="dateField">Name</label>
                                    <input type="text" id="nameField" class="form-control" name="CityName" placeholder="">
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                               
                            </form>
                        </div>
                        <div class="col-md-6">
                            <div id="table-wrapper">
                                <div id="table-scroll">
                                    <div class="table-responsive">
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>City Name</th>

                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            @if (TempData["City"] != null)
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <tbody>
                                                        <tr>
                                                            <td>@item.CityName</td>

                                                            <td>
                                                                <a title="Update CityName" class="counter" href="@Url.Action("UpdateCity", new { id = item.CityId })">
                                                                    <i class="fa fa-edit" style="font-size:20px"></i>
                                                                </a>
                                                                <a title="Delete CityName" class="counter" href="@Url.Action("DelCity", new { id = item.CityId })">
                                                                    <i class="fa fa-trash" style="font-size:20px;color:red"></i>
                                                                </a>
                                                            </td>


                                                        </tr>
                                                    </tbody>
                                                }
                                            }
                                        </table>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
