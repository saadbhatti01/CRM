@model SMS.Models.Class

@{
    ViewBag.Title = "UpdateClass";
}

@using (Html.BeginForm("UpdateClass", "Home"))
{
    <div class="page-inner">
        <div class="panel-title">
            <h3 class="breadcrumb-header"> Update Class</h3>
        </div>
        <div id="main-wrapper">
            <div class="row">

                <div class="col-md-12">


                    <div class="panel panel-white">
                        <div class="panel-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.classId)
                            <div class="col-md-3">

                                <div class="form-group">
                                    <label>Class Name</label><br>
                                    @Html.EditorFor(model => model.classname, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.classname, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-3">

                                <div class="form-group">
                                    <label>Class Code</label><br>
                                    @Html.EditorFor(model => model.classCode, new { htmlAttributes = new { @class = "form-control", Maxlength = "2" } })
                                    @Html.ValidationMessageFor(model => model.classCode, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br>
                            <div class="col-md-3">

                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
