@model SMS.Models.FeeType

@{
    ViewBag.Title = "UpdateFeeType";
}

@using (Html.BeginForm("UpdateFeeType", "Home"))
{
    <div class="page-inner">
        <div class="panel-title">
            <h3 class="breadcrumb-header"> Update Fee Type</h3>
        </div>
        <div id="main-wrapper">
            <div class="row">

                <div class="col-md-12">


                    <div class="panel panel-white">
                        <div class="panel-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.feeTypeId)
                            <div class="col-md-3">

                                <div class="form-group">
                                    <label>Fee Name</label>
                                    @Html.EditorFor(model => model.feeTypeName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.feeTypeName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-3 form-group">
                                <label for="ageRangeField">Fee Status</label>
                                <select id="ageRangeField" name="feeTypeStatus" class="form-control">
                                    <option value="Open">Open</option>
                                    <option value="Closed">Closed</option>
                                </select>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group">

                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        </div>
        }


